		}
		thModal.onclick = function() {
		thModal.style.display = "none";
		}

		var nackaModal = document.getElementById('nackaModal');
		var nackaImg = document.getElementById('nackaImg');
		var nackaModalImg = document.getElementById("img02");

		nackaImg.onclick = function(){
			nackaModal.style.display = "block";
			nackaModalImg.src = '/images/nackademin.png';
		}
		nackaModal.onclick = function() {
		nackaModal.style.display = "none";
		}

